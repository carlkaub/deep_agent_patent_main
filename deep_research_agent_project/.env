
# Deep Research Agent - Local Development Environment

# =================================
# Application Configuration
# =================================
NODE_ENV=development
PORT=3000
APP_NAME="Deep Research Agent"
APP_URL=http://localhost:3000

# =================================
# Database Configuration
# =================================
DATABASE_URL=postgresql://research_user:research_password@localhost:5432/deep_research_agent
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=deep_research_agent
POSTGRES_USER=research_user
POSTGRES_PASSWORD=research_password

# =================================
# Redis Configuration
# =================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# Authentication & Security
# =================================
JWT_SECRET=deep-research-jwt-secret-2024-development-only
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
SESSION_SECRET=deep-research-session-secret-dev

# =================================
# Patent Database APIs
# =================================
# Google Patents (Free API - no key required)
GOOGLE_PATENTS_API_URL=https://patents.googleapis.com/v1/patents

# USPTO API
USPTO_API_URL=https://developer.uspto.gov/api/v1
USPTO_API_KEY=DEMO_KEY

# Placeholder for other APIs (to be configured when keys are obtained)
EPO_API_URL=https://worldwide.espacenet.com/publicationDetails
EPO_API_KEY=

WIPO_API_URL=https://www.wipo.int/branddb/rest
WIPO_API_KEY=

# =================================
# AI/ML Services
# =================================
# OpenAI API (requires actual key - replace with your key)
OPENAI_API_KEY=sk-your-openai-api-key-here-replace-this
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# =================================
# Email Service (Development)
# =================================
EMAIL_SERVICE=console
EMAIL_FROM=dev@deepresearchagent.com
EMAIL_FROM_NAME="Deep Research Agent (Dev)"

# Console logging for development (no actual emails sent)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# =================================
# File Storage (Local Development)
# =================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# =================================
# Rate Limiting (Relaxed for Development)
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

GOOGLE_PATENTS_RATE_LIMIT=1000
USPTO_RATE_LIMIT=500
EPO_RATE_LIMIT=300

# =================================
# Job Queue Configuration
# =================================
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_DEFAULT_JOB_OPTIONS='{"removeOnComplete":10,"removeOnFail":50}'
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=7200000

# =================================
# Logging (Development)
# =================================
LOG_LEVEL=debug
LOG_FILE=./logs/development.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=3

# =================================
# Development Settings
# =================================
DEBUG=deep-research-agent:*
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# =================================
# Feature Flags (Development)
# =================================
ENABLE_PATENT_UPLOAD=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_EXPORT_FEATURES=true

# =================================
# Development Database Seeding
# =================================
SEED_DATABASE=true
CREATE_DEMO_USER=true
DEMO_USER_EMAIL=demo@deepresearchagent.com
DEMO_USER_PASSWORD=demo123

# =================================
# Local Development URLs
# =================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
WEBSOCKET_URL=ws://localhost:3001
