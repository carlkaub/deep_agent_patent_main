
# Deep Research Agent - Environment Variables Template

# =================================
# Application Configuration
# =================================
NODE_ENV=development
PORT=3000
APP_NAME="Deep Research Agent"
APP_URL=http://localhost:3000

# =================================
# Database Configuration
# =================================
# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/deep_research_agent
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=deep_research_agent
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# =================================
# Redis Configuration (for job queues)
# =================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# Authentication & Security
# =================================
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here

# =================================
# Patent Database APIs
# =================================
# Google Patents API (Free - no key required for basic search)
GOOGLE_PATENTS_API_URL=https://patents.googleapis.com/v1/patents

# USPTO API Configuration
USPTO_API_URL=https://developer.uspto.gov/api/v1
USPTO_API_KEY=your-uspto-api-key-here

# European Patent Office API
EPO_API_URL=https://worldwide.espacenet.com/publicationDetails
EPO_API_KEY=your-epo-api-key-here

# WIPO Global Brand Database API
WIPO_API_URL=https://www.wipo.int/branddb/rest
WIPO_API_KEY=your-wipo-api-key-here

# =================================
# AI/ML Services
# =================================
# OpenAI API for natural language processing
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Alternative AI APIs (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# =================================
# Email Service Configuration
# =================================
# Email service for notifications
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@deepresearchagent.com
EMAIL_FROM_NAME="Deep Research Agent"

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Alternative: AWS SES Configuration
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-aws-access-key
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key

# Alternative: SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# =================================
# File Storage Configuration
# =================================
# Local file storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration (optional)
AWS_S3_BUCKET=deep-research-agent-files
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your-s3-access-key
AWS_S3_SECRET_ACCESS_KEY=your-s3-secret-key

# =================================
# API Rate Limiting
# =================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Patent API specific rate limits
GOOGLE_PATENTS_RATE_LIMIT=1000
USPTO_RATE_LIMIT=500
EPO_RATE_LIMIT=300

# =================================
# Job Queue Configuration
# =================================
# Bull Queue settings
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_DEFAULT_JOB_OPTIONS='{"removeOnComplete":10,"removeOnFail":50}'
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=7200000

# =================================
# Logging Configuration
# =================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# =================================
# Development Tools
# =================================
# Enable debugging and development features
DEBUG=deep-research-agent:*
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# =================================
# Monitoring & Analytics
# =================================
# Application monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME="Deep Research Agent"

# =================================
# Feature Flags
# =================================
# Enable/disable features during development
ENABLE_PATENT_UPLOAD=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_EXPORT_FEATURES=true
